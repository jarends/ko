.split-handle
.split-pane
    position        absolute
    
.split-handle
    background      #222
    
.split-vert .split-handle
    width           10px

.split-horiz .split-handle
    height 10px
    
.split-horiz .split-handle
.split-top
.split-bot
    left            0
    right           0
    
.split-bot
    bottom          0
    
/*
*  00000000  0000000    000  000000000   0000000   00000000 
*  000       000   000  000     000     000   000  000   000
*  0000000   000   000  000     000     000   000  0000000  
*  000       000   000  000     000     000   000  000   000
*  00000000  0000000    000     000      0000000   000   000
*/

.split-pane.split-bot 
    background      #000
    border          1px solid #333
    border-top      0px solid
    
    border-bottom-left-radius    bottomCornerRadius
    border-bottom-right-radius   bottomCornerRadius    

.editor

    fill-abs()
    
    left  20px
    right  20px
    
    overflow-x      auto
    overflow-y      hidden

    background      #000
    color           #ddd 
        
    border-bottom-left-radius    bottomCornerRadius
    border-bottom-right-radius   bottomCornerRadius    
            
    font-weight     bold
    font-family     "Andale Mono", monospace
    
    &:focus .cursor 
        background  yellow
    
.lines
.cursors
.highlights
.selections
    pointer-events  none
    outline-width   0
    fill-abs()

/*
*  000      000  000   000  00000000   0000000
*  000      000  0000  000  000       000     
*  000      000  000 0 000  0000000   0000000 
*  000      000  000  0000  000            000
*  0000000  000  000   000  00000000  0000000 
*/
    
.lines
    position        static
    cursor          default

.line
    white-space     nowrap
    display         block
    position        absolute
    & span
        display     inline-block

/*
*   0000000  000   000  00000000    0000000   0000000   00000000 
*  000       000   000  000   000  000       000   000  000   000
*  000       000   000  0000000    0000000   000   000  0000000  
*  000       000   000  000   000       000  000   000  000   000
*   0000000   0000000   000   000  0000000    0000000   000   000
*/
    
.cursor
    width            2px
    margin-right    -1px
    margin-left     -1px
    display         block
    background      rgba(255, 255, 255, 0.2) // not focus

/*
*  000000000  00000000  00000000   00     00  000  000   000   0000000   000    
*     000     000       000   000  000   000  000  0000  000  000   000  000    
*     000     0000000   0000000    000000000  000  000 0 000  000000000  000    
*     000     000       000   000  000 0 000  000  000  0000  000   000  000    
*     000     00000000  000   000  000   000  000  000   000  000   000  0000000
*/

.terminaljs 
	background   black
	color        white
	font-family  Courier, monospace
	display      inline-block

/*
*   0000000  00000000  000      00000000   0000000  000000000  000   0000000   000   000
*  000       000       000      000       000          000     000  000   000  0000  000
*  0000000   0000000   000      0000000   000          000     000  000   000  000 0 000
*       000  000       000      000       000          000     000  000   000  000  0000
*  0000000   00000000  0000000  00000000   0000000     000     000   0000000   000   000
*/
    
.editor
    &:focus .selection
        background  #444 // focus
        
.selection
    position        absolute
    pointer-events  none
    background      #282828 // no focus
    
    padding-right   selectionRadiusCursor
    margin-right    - selectionRadiusCursor
    padding-left    selectionRadiusCursor
    margin-left     - selectionRadiusCursor
    &.start
        padding-left    editorPadding
        margin-left     - editorPadding
    
    &.tl
        border-top-left-radius selectionRadius
        &.start
            border-top-left-radius 0
            
    &.bl
        border-bottom-left-radius selectionRadius
        &.start
            border-bottom-left-radius 0
            
    &.tr
        border-top-right-radius selectionRadius
    &.br
        border-bottom-right-radius selectionRadius
        
    & .empty // used in selections of empty lines
        width            1px
        margin-right    -1px

// @import 'syntax'

/*
*   0000000  000   000  000   000  000000000   0000000   000   000
*  000        000 000   0000  000     000     000   000   000 000 
*  0000000     00000    000 0 000     000     000000000    00000  
*       000     000     000  0000     000     000   000   000 000 
*  0000000      000     000   000     000     000   000  000   000
*/

.syntax
    color           #666
    
.bool           
    color           #88f
    &.false      
        color       #44f
    
.number
    color           #66f
    &.float   
        color       #f88

.dictionary
    color           #ff6

.array
    color           #00f

.owner
.callee
.class
    color           #ff0
        
.property
    opacity         0.8
    
.variable
    color           #a0a
    
.range
    color           #80f
    
.require    
    color           #0f0

.this
    opacity         0.7
        
.marker
    opacity         0.5
            
.module
    color           #ff8

.method
    color           #ff0
    
.property
    color           #ff2
    
.function
    color           #fa0
    &.call          
        color       #f90
    &.marker
        color       #55f
        opacity     1
        &.bound
            color   #66f
    &.bracket
        color       #55f
    &.argument
        color       #aaf
        &.punctuation
            opacity  0.5

.class
    &.variable
        color       #2ae
    &.function
        color       #fc8

.syntax.cond
.keyword
    color           #aaf !important
    &.null    
        color       #a00 !important

.interpolation.marker
        color       #f83

.variable.err        
    color           #f08

.syntax.exists     
    opacity         0.7

.string
    color           #0a0
    &.double
        color       #0f0
        
.comment
    color           #3f3f3f !important

.require
    &.variable
        color       #4f4
    &.string 
        color       #0a0
    &.keyword.require 
        color       #666
    &.syntax
        opacity     0.5