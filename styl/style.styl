
editorFontSize        = 18px
selectionRadius       = round(editorFontSize / 3)
selectionRadiusCursor = round(selectionRadius / 2)

scrollFontSize        = 24px
scrollbarWidth        = 60px
editorPadding         = 10px

/*
*   0000000   0000000  00000000    0000000   000      000      0000000     0000000   00000000    0000000
*  000       000       000   000  000   000  000      000      000   000  000   000  000   000  000     
*  0000000   000       0000000    000   000  000      000      0000000    000000000  0000000    0000000 
*       000  000       000   000  000   000  000      000      000   000  000   000  000   000       000
*  0000000    0000000  000   000   0000000   0000000  0000000  0000000    000   000  000   000  0000000 
*/

.scroll
::-webkit-scrollbar
    width                   8px
::-webkit-scrollbar    
    height                  8px

::-webkit-scrollbar-corner
    background              #222

::-webkit-scrollbar-thumb
    background              #333

.scroll:hover
::-webkit-scrollbar-thumb:hover
    background              #666

.scrollbar
    position            absolute
    top                 0
    bottom              0
        
    &.left
        left            0
        width           scrollbarWidth
    &.right
        right           0
        width           scrollbarWidth

.scroll
    // background          rgba(255,255,255,0.2)
    // margin 1px
    background          #333
    position            absolute
    height              20%
    top                 0
    &.left
        left            0
    &.right
        right           0    

/*
*  0000000     0000000   0000000    000   000
*  000   000  000   000  000   000   000 000 
*  0000000    000   000  000   000    00000  
*  000   000  000   000  000   000     000   
*  0000000     0000000   0000000       000   
*/
    
body
    background      #111
    color           #fff
    font-family     arial, helvetica, sans-serif
    margin          0
    height          100%
    width           100%
    position        absolute
    -webkit-user-select none
    
#main
    height          100%
    width           100%
    position        absolute
    overflow        hidden
/*
*   0000000   0000000  00000000    0000000   000      000    
*  000       000       000   000  000   000  000      000    
*  0000000   000       0000000    000   000  000      000    
*       000  000       000   000  000   000  000      000    
*  0000000    0000000  000   000   0000000   0000000  0000000
*/
        
#scroll
    font-size       scrollFontSize    
    padding-top     24px
    padding-left    4px
    width           100%
    top             0px
    position        absolute
    -webkit-app-region drag

/*
*   0000000  00000000   000      000  000000000
*  000       000   000  000      000     000   
*  0000000   00000000   000      000     000   
*       000  000        000      000     000   
*  0000000   000        0000000  000     000   
*/
    
#split
    width           100%
    height          10px
    background      #333
    position        absolute
    -webkit-app-region no-drag
    
/*
*  00000000  0000000    000  000000000   0000000   00000000 
*  000       000   000  000     000     000   000  000   000
*  0000000   000   000  000     000     000   000  0000000  
*  000       000   000  000     000     000   000  000   000
*  00000000  0000000    000     000      0000000   000   000
*/

#editor
    width           100%
    position        absolute
    bottom          0px
    background      #000
        
.input
#input
    font-size       editorFontSize                
    font-weight     bold
    position        absolute
    font-family     "Andale Mono", monospace
    white-space     nowrap
    
#input    
    border          1px solid #333
    border-bottom-left-radius    8px
    border-bottom-right-radius   8px
    border-top      0px solid none
    top             0
    bottom          0
    left            0 
    right           0
    padding         editorPadding
    padding-top     0
    outline-width   0    
    overflow-x      auto
    overflow-y      hidden
    cursor          default
    &:focus #cursor 
        background  yellow
    &:focus > .selection
        background  #666

.line
    pointer-events  none
    white-space     nowrap
    display         list-item
    & span
        display     inline-block

/*
*  000000000  00000000  00000000   00     00  000  000   000   0000000   000    
*     000     000       000   000  000   000  000  0000  000  000   000  000    
*     000     0000000   0000000    000000000  000  000 0 000  000000000  000    
*     000     000       000   000  000 0 000  000  000  0000  000   000  000    
*     000     00000000  000   000  000   000  000  000   000  000   000  0000000
*/

.terminaljs 
	background   black
	color        white
	font-family  Courier, monospace
	display      inline-block

/*
*   0000000  000   000  00000000    0000000   0000000   00000000 
*  000       000   000  000   000  000       000   000  000   000
*  000       000   000  0000000    0000000   000   000  0000000  
*  000       000   000  000   000       000  000   000  000   000
*   0000000   0000000   000   000  0000000    0000000   000   000
*/
    
#cursor
    width            2px
    margin-right    -1px
    margin-left     -1px
    vertical-align  text-bottom
    background      rgba(255, 255, 255, 0.2) // not focus
/*
*   0000000  00000000  000      00000000   0000000  000000000  000   0000000   000   000
*  000       000       000      000       000          000     000  000   000  0000  000
*  0000000   0000000   000      0000000   000          000     000  000   000  000 0 000
*       000  000       000      000       000          000     000  000   000  000  0000
*  0000000   00000000  0000000  00000000   0000000     000     000   0000000   000   000
*/
        
.selection
    pointer-events  none
    background      rgba(255, 255, 255, 0.2) // no focus - needs to be transparent for cursor to show through
    
    padding-right   selectionRadiusCursor
    margin-right    - selectionRadiusCursor
    padding-left    selectionRadiusCursor
    margin-left     - selectionRadiusCursor
    &.start
        padding-left    editorPadding
        margin-left     - editorPadding
    
    &.tl
        border-top-left-radius selectionRadius
        &.cursor
            border-top-left-radius selectionRadiusCursor
        &.start
            border-top-left-radius 0
            
    &.bl
        border-bottom-left-radius selectionRadius
        &.cursor
            border-bottom-left-radius  selectionRadiusCursor
        &.start
            border-bottom-left-radius 0
            
    &.tr
        border-top-right-radius selectionRadius
        &.cursor
            border-top-right-radius  selectionRadiusCursor
    &.br
        border-bottom-right-radius selectionRadius
        &.cursor
            border-bottom-right-radius selectionRadiusCursor
        
    & .empty // used in selections of empty lines
        width            1px
        margin-right    -1px

/*
*   0000000  000   000  000   000  000000000   0000000   000   000
*  000        000 000   0000  000     000     000   000   000 000 
*  0000000     00000    000 0 000     000     000000000    00000  
*       000     000     000  0000     000     000   000   000 000 
*  0000000      000     000   000     000     000   000  000   000
*/

.syntax
    color           #666
    
.bool           
    color           #88f
    &.false      
        color       #44f
    
.number
    color           #88f
    &.float   
        color       #f88

.dictionary
    color           #ff6

.array
    color           #00f

.owner
.callee
.class
    color           #ff0    
    
.syntax.cond
.keyword
    color           #aaf
    &.null    
        color       #a00

.variable
    color           #0aa
    
.range
    color           #80f
    
.require    
    color           #0f0

.this
    opacity         0.7
        
.marker
    opacity         0.5
            
.module
    color           #ff8

.method
    color           #ff0
    
.property
    color           #ff2
    
.function
    color           #fa0
    &.call          
        color       #f90
    &.marker
        color       #55f
        opacity     1
        &.bound
            color   #66f
    &.bracket
        color       #55f
    &.argument
        color       #aaf
        &.punctuation
            opacity  0.5

.interpolation.marker
        color       #f83

.variable.err        
    color           #f08

.syntax.exists     
    opacity         0.7

.string
    color           #f83
        
.comment
    color           #444 !important

.require
    &.variable
        color       #4f4
    &.string 
        color       #0a0
    &.keyword.require 
        color       #666
    &.syntax
        opacity     0.5

        
        