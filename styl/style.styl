
::-webkit-scrollbar
    width                   8px
    height                  8px

::-webkit-scrollbar-thumb
    -webkit-border-radius:  4px
    border-radius:          4px
    background              #333

::-webkit-scrollbar-thumb:hover
    background              #666

::-webkit-scrollbar-corner
    background              #222

body
    background      #222
    color           #fff
    font-family     arial, helvetica, sans-serif
    margin          0
    height          100%
    width           100%
    position        absolute
    -webkit-user-select     none
    
#main
    height          100%
    width           100%
    position        absolute
    overflow        hidden
        
#scroll
    padding-top     24px
    padding-left    4px
    width           100%
    top             0px
    position        absolute
    -webkit-app-region      drag
    
#split
    width           100%
    height          10px
    background      #111
    position        absolute
    -webkit-app-region      no-drag
    
#editor
    width           100%
    position        absolute
    bottom          0px
    
.input
#input
    position        absolute
    font-size       36px
    font-weight     bold
    font-family     "Andale Mono", monospace
    white-space     nowrap
    
#input    
    top             0
    bottom          0
    left            0 
    right           0
    padding         10px
    overflow        auto
    cursor          default
    background      #181818
    outline-width   0    
    &:focus #cursor 
        background  yellow
    &:focus > .selection
        background      rgba(255, 255, 255, 0.25)
    
#cursor
    width           2px
    margin-right    -2px
    vertical-align  text-bottom
    display         inline-block
    background      rgba(255, 255, 255, 0.2) // not focus
    
.selection
    background      rgba(255, 255, 255, 0.1) // no focus
    &.tl
        border-top-left-radius 10px
    &.tr
        border-top-right-radius 10px
    &.bl
        border-bottom-left-radius 10px
    &.br
        border-bottom-right-radius 10px
        