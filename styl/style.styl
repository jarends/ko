// all  initial -- to clear inherited

editorFontSize        = 16px
selectionRadius       = round(editorFontSize / 3)
selectionRadiusCursor = round(selectionRadius / 2)

scrollFontSize        = 24px
scrollbarWidth        = 60px // transparent scroll area
scrollhandleWidth     = 8px
editorPadding         = 2px 
bottomCornerRadius    = 5px

fill-abs()
    position        absolute
    bottom          0
    right           0
    left            0
    top             0
    
fill-rel()
    position        static
    height          100%
    width           100%

*
    outline-width   0

/*
*  000000000  000  000000000  000      00000000  0000000     0000000   00000000 
*     000     000     000     000      000       000   000  000   000  000   000
*     000     000     000     000      0000000   0000000    000000000  0000000  
*     000     000     000     000      000       000   000  000   000  000   000
*     000     000     000     0000000  00000000  0000000    000   000  000   000
*/

.titlebar
    height              20px
    background          #333
    color               #aaa
    font-size           14px
    padding-top         3px
    padding-left        70px
    padding-right       70px
    -webkit-app-region  drag

/*
*   0000000   0000000  00000000    0000000   000      000      0000000     0000000   00000000    0000000
*  000       000       000   000  000   000  000      000      000   000  000   000  000   000  000     
*  0000000   000       0000000    000   000  000      000      0000000    000000000  0000000    0000000 
*       000  000       000   000  000   000  000      000      000   000  000   000  000   000       000
*  0000000    0000000  000   000   0000000   0000000  0000000  0000000    000   000  000   000  0000000 
*/

::-webkit-scrollbar
    width                   scrollhandleWidth
::-webkit-scrollbar    
    height                  scrollhandleWidth

::-webkit-scrollbar-corner
    background              #222

::-webkit-scrollbar-thumb
    background              #333

.scrollhandle:hover
::-webkit-scrollbar-thumb:hover
    background              #666

.scrollbar
    position            absolute
    top                 0
    bottom              0
        
    &.left
        left            0
        width           scrollbarWidth
    &.right
        right           0
        width           scrollbarWidth

.scrollhandle
    background          #333
    position            absolute
    width               scrollhandleWidth
    top                 0
    &.left
        left            0
    &.right
        right           0    

/*
*  0000000     0000000   0000000    000   000
*  000   000  000   000  000   000   000 000 
*  0000000    000   000  000   000    00000  
*  000   000  000   000  000   000     000   
*  0000000     0000000   0000000       000   
*/
    
body
    background          #000
    color               #fff
    font-family         arial, helvetica, sans-serif
    -webkit-user-select none
    fill-abs()
    overflow            hidden
    margin              0
    
#main
    fill-rel()
    overflow            hidden
    -webkit-app-region  no-drag

/*
*   0000000   0000000  00000000    0000000   000      000    
*  000       000       000   000  000   000  000      000    
*  0000000   000       0000000    000   000  000      000    
*       000  000       000   000  000   000  000      000    
*  0000000    0000000  000   000   0000000   0000000  0000000
*/
        
#scroll
    font-size       scrollFontSize    
    position        absolute
    top             0
    bottom          0
    left            0
    right           0
    overflow        auto

/*
*   0000000  00000000   000      000  000000000
*  000       000   000  000      000     000   
*  0000000   00000000   000      000     000   
*       000  000        000      000     000   
*  0000000   000        0000000  000     000   
*/
    
.split
.split-rel
    fill-rel()

