@keyframes blink 
  from 
    background      yellow
  to 
    background      #444

@keyframes blink-virtual
  from 
    background      #08f
  to 
    background      transparent
        
*:focus .cursor
    background          yellow // focus 
    animation-name      blink
    animation-duration  500ms
    animation-iteration-count infinite
    animation-direction alternate
    animation-timing-function ease-in-out
    &.virtual
        background      #444 
        animation-name  blink-virtual
    
.cursor
    width            2px
    margin-right    -1px
    margin-left     -1px
    display         inline-block
    background      #444 // not focus
    &.virtual
        background  #111 // not focus

